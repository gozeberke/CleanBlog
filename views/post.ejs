<%- include('partials/_header') -%>


<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>
  

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blog.title %></h1>
            <span class="meta">Posted on
              <a href="#"></a>
              <%=blog.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-12 mx-auto">
          <h2 class="section-heading"><%= blog.title %></h2>
          <p><%=blog.detail %></p>
         
          <div class="clearfix">

            <a class="btn btn-danger float-right" href="/blogs/<%= blog._id %>?_method=DELETE"
              onclick="return confirm('ARE YOU SURE?')">Delete Post</a>
            <a class="btn btn-warning float-right text-white mr-3" href="/blogs/edit/<%= blog._id %>">Update Post</a>
            
          </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>
  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
